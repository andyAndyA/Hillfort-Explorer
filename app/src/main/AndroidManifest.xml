<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wit.hillfortexplorer">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.hillfortsmap.HillfortsMapView"
            android:label="@string/title_activity_hillforts_map"
            android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.hillfortlist.HillfortListActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".views.editlocation.EditLocationView"
            android:label="@string/title_activity_map">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.hillfort.HillfortView" />
        </activity>
        <activity android:name=".views.settings.SettingsView">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.hillfortlist.HillfortListActivity" />
        </activity>
        <activity android:name=".views.hillfort.HillfortView">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.hillfortlist.HillfortListActivity" />
        </activity>
        <activity android:name=".views.hillfortlist.HillfortListActivity"></activity>
        <activity android:name=".views.authentication.AuthenticationView"></activity>
        <activity android:name=".views.splashscreen.SplashScreenView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>